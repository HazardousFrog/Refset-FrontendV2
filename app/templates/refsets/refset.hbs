{{#if authError}}
	You need to <a href="#" {{action 'showLoginForm'}}>login</a> to access this refset
{{else}}
	<div class="dashboard">
		<div class="colMed inner">
			{{#bs-panel heading="Refset Details" type="info" class=""}}
				{{#em-form model=model submit_button=false}}
				    {{em-text property="description" label="Description" placeholder="Description" rows=2}}
				    {{em-input property="id" label="ID" placeholder="Refset ID" disabled="true"}}
				    {{em-input property="moduleId" label="Module ID" placeholder="Module ID" disabled="true"}}
				    {{em-input property="formattedCreatedDate" label="Created date" placeholder="Created date" disabled="true"}}
				    {{em-input property="createdBy" label="By" placeholder="Created by" disabled="true"}}
					{{em-input property="type" label="Refset Type" placeholder="Refset type" disabled="true"}}
					{{em-input property="formattedPublishedDate" label="Published" placeholder="Published date" disabled="true"}}
				{{/em-form}}
			{{/bs-panel}}
			
			<button {{action 'exportRefset'}} class="btn">Export</button>
			<button {{action 'updateRefset'}} class="btn btn-primary right">Save changes</button>
		</div>
		
		<div class="colMed inner">
			{{#bs-panel heading="Members" type="info" class="panelNoPadding"}}
			
				<ul class="list-group checkboxList">
					{{#each members}}
						<li class="list-group-item">
							<label {{bind-attr class=':control-label found::disabled'}}>
								<input type="checkbox" name="conceptId" {{bind-attr value='referenceComponentId'}} {{bind-attr checked='active'}} {{bind-attr disabled='disabled'}}> 
								{{description}}
								{{#if found}}{{#unless conceptactive}}<br><span class="warning">This concept is INACTIVE and so will not be included in any Refset export at this time</span>{{/unless}}{{/if}}
								<span class="referenceComponentId">{{referenceComponentId}}</span>
							</label>
						</li>
					{{/each}}
				</ul>
			
			{{/bs-panel}}
		</div>
	</div>
{{/if}}